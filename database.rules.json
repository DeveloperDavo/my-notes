{
  "rules": {
    "notes": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "$note_id": {
          ".validate": "newData.hasChildren(['title', 'body'])",
          "title": {
            ".validate": "newData.isString()"
          },
          "body": {
            ".validate": "newData.isString()"
          },
          "$other": { ".validate": false }
        }
      }
    }
  }
}