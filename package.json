{
  "name": "my-notes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "firebase": "^5.4.2",
    "firebase-tools": "^4.2.1",
    "normalize.css": "^8.0.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts": "1.1.4",
    "standard": "^11.0.1"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "standard",
    "test:ci"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true yarn test",
    "eject": "react-scripts eject",
    "standard": "standard",
    "standard:fix": "standard --fix",
    "deploy:firebase": "npx firebase deploy --project $REACT_APP_PROJECT_ID --non-interactive --token $FIREBASE_TOKEN",
    "deploy:netlify": "yarn test:ci && yarn build && yarn deploy:firebase"
  }
}
