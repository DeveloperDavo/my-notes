  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint --config .eslintrc.js 'src/**/*.{ts,tsx}' --format codeFrame --max-warnings 0 && npx stylelint src/**/*.css",
    "lint:fix": "eslint --config .eslintrc.js 'src/**/*.{ts,tsx}' --fix --format codeFrame && npx stylelint src/**/*.css --fix",
    "pretest": "npm run lint",
    "test": "CI=true react-scripts test",
    "watch": "react-scripts test --verbose=false",
    "eject": "react-scripts eject",
    "deploy:firebase": "npx firebase deploy --project $REACT_APP_PROJECT_ID --non-interactive --token $FIREBASE_TOKEN",
    "deploy:netlify": "npm test && CI=true npm run build && npm run deploy:firebase"
  }
