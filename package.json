{
  "name": "my-notes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.1",
    "firebase": "^5.4.2",
    "firebase-tools": "^4.2.1",
    "normalize.css": "^8.0.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-responsive": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.1",
    "standard": "^11.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "standard",
    "test:ci"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true npm test",
    "eject": "react-scripts eject",
    "standard": "standard",
    "standard:fix": "standard --fix",
    "deploy:firebase": "npx firebase deploy --project $REACT_APP_PROJECT_ID --non-interactive --token $FIREBASE_TOKEN",
    "deploy:netlify": "npm run test:ci && npm run build && npm run deploy:firebase"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
