    "pretest": "npm run lint",
    "test": "CI=true react-scripts test --verbose=false",
    "watch": "react-scripts test --verbose=false",
    "eject": "react-scripts eject",
    "deploy:firebase": "npx firebase deploy --project $REACT_APP_PROJECT_ID --non-interactive --token $FIREBASE_TOKEN",
