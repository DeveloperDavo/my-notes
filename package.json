{
  "name": "my-notes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/uuid": "^3.4.4",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.1",
    "firebase": "^5.4.2",
    "firebase-tools": "^4.2.1",
    "jest-dom": "^3.1.3",
    "normalize.css": "^8.0.0",
    "prettier": "^1.16.4",
    "react": "^16.4.2",
    "react-contenteditable": "^3.2.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.8",
    "react-testing-library": "^6.0.4",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "tslint-react-a11y": "^1.0.0",
    "typescript": "^3.4.1",
    "uuid": "^3.3.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": "composes"
        }
      ]
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' && npx stylelint src/**/*.css",
    "lint:fix": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix  && npx stylelint src/**/*.css --fix",
    "pretest": "npm run lint",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy:firebase": "npx firebase deploy --project $REACT_APP_PROJECT_ID --non-interactive --token $FIREBASE_TOKEN",
    "deploy:netlify": "CI=true npm test && CI=true npm run build && npm run deploy:firebase"
  }
}
