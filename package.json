{
  "name": "my-notes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "firebase": "^5.4.2",
    "firebase-tools": "^4.2.1",
    "husky": "^1.3.1",
    "normalize.css": "^8.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "react": "^16.4.2",
    "react-contenteditable": "^3.2.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.1",
    "react-testing-library": "^6.0.4",
    "uuid": "^3.3.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "plugins": [
      "jsx-a11y"
    ],
    "extends": [
      "plugin:jsx-a11y/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test",
    "test:ci": "CI=true npm test",
    "eject": "react-scripts eject",
    "deploy:firebase": "npx firebase deploy --project $REACT_APP_PROJECT_ID --non-interactive --token $FIREBASE_TOKEN",
    "deploy:netlify": "npm run test:ci && npm run build && npm run deploy:firebase"
  }
}
